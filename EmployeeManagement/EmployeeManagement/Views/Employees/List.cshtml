@model List<EmployeeManagement.ViewModels.Employee.ListViewModel>

<div class="container">
    <div class="row justify-content-end">
        <div class="">
            <a asp-route="employee-add" target="_blank" class="btn btn-secondary">Add New Employee</a>
        </div>
    </div>
    <div class="row mt-3">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Employee Code</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Father Name</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employeeModels in Model)
                    {
                    @if (employeeModels.IsDeleted == false)
                        {
                        <tr>
                            <th scope="row">@employeeModels.EmployeeCode</th>
                            <td>@employeeModels.FirstName</td>
                            <td>@employeeModels.LastName</td>
                            <td>@employeeModels.FatherName</td>
                            <td class="d-flex justify-content-between">
                                <a asp-route="employee-delete" asp-route-employeeCode="@employeeModels.EmployeeCode" class="col-3 btn btn-secondary">Delete Employee</a>
                                <a asp-route="employee-edit-employeeCode" asp-route-employeeCode="@employeeModels.EmployeeCode" target="_blank" class="col-3 btn btn-secondary">Edit Employee</a>
                            </td>
                        </tr>
                        }
                    }
                </tbody>
        </table>
    </div>
</div>